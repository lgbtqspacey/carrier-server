{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": ".",
    "target": "es2019",
    "module": "commonjs",
    "typeRoots": [
      "src/@types",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "test/*": [
        "test/*"
      ]
    },
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "exclude": [
    "node_modules",
    "coverage"
  ]
}